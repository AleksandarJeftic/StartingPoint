<div class="container">
  <% if flash[:notice] %>
    <div class="alert alert-success alert-dismissible fade show pb-0 mt-2" role="alert">
        <p><%= flash.notice %></p>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  <% end %>
</div>