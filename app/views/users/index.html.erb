<div class='container'>
  <% if @users.present? %>
    <div class="d-flex justify-content-end mt-2 mb-2">
      <%= link_to 'Menage Permissions', permissions_path, class: 'btn btn-primary me-1' %>
      <%= link_to 'Create User', new_user_path, class: 'btn btn-success' %>
    </div>
  <% end %>
  <table class='table table-hover mt-2 border'>
    <thead class="table-primary">
      <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Email</th>
        <th>Username</th>
        <th>Password</th>
        <th>Status</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% if @users.present? %>
        <% @users.each do |user| %>
          <tr>
            <td><%= user.first_name %></td>
            <td><%= user.last_name %></td>
            <td><%= user.email %></td>
            <td><%= user.username %></td>
            <td><%= user.password %></td>
            <td><%= user.status %></td>
            <%= render 'table_action_buttons', resource: user  %>
          </tr>
        <% end %>
      <% else %>
        <tr>
          <td class='text-center' colspan='6'>
            <p>There are no users yet. Feel free to create one... </p>
            <%= link_to 'Create User', new_user_path, class: 'btn btn-success' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <div class="row">
    <div class="d-flex justify-content-end">
      <%= paginate @users %>
    </div>
  </div>
</div>