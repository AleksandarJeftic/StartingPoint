<div class='container'>
  <div class='table table-responsive table-primary'>
    <thead>
      <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Email</th>
        <th>Username</th>
        <th>Password</th>
        <th>Status</th>
      </tr>
    </thead>
    <tbody>
      <% if @users.present? %>
        <% @users.each do |user| %>
          <tr>
            <td><%= user.first_name %></td>
            <td><%= user.last_name %></td>
            <td><%= user.email %></td>
            <td><%= user.username %></td>
            <td><%= user.password %></td>
            <td><%= user.status %></td>
          </tr>
        <% end %>
      <% else %>
        <tr>
          <p class='text-center'>There are no users ye. Feel free to create one </p>
          <%= link_to 'Create User', new_user_path, class: 'btn btn-success' %>
        </tr>
      <% end %>
    </tbody>
  </div>
</div>