<td class="text-left align-top text-center">
  <div class="dropdown">
    <button class="btn btn-primary btn-sm dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
      Actions
    </button>
    <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
      <%= link_to 'View', resource, method: :get, class: 'dropdown-item text-primary' %>
      <%= link_to 'Edit', [:edit, resource], method: :get, class: 'dropdown-item text-secondary' %>
      <div class="dropdown-divider">
      </div>
      <%= link_to "Delete", resource, method: :delete, data: { confirm: "Are you sure? This can not be undone." }, class: 'dropdown-item text-danger' %>
    </ul>
  </div>
</td>